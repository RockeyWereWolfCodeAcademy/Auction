@{
    Layout = null;
}


@model LoginDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin_~/admin_assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin_assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/admin_assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/admin_assets/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Admin Login</h3>
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="UsernameOrEmail">Username *</label>
                                    <input type="text" style="color: white" asp-for="UsernameOrEmail" class="form-control p_input">
                                    <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password *</label>
                                    <input type="password" style="color: white" asp-for="Password" class="form-control p_input">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="text-center">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/admin_assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/admin_assets/js/off-canvas.js"></script>
    <script src="~/admin_assets/js/hoverable-collapse.js"></script>
    <script src="~/admin_assets/js/misc.js"></script>
    <script src="~/admin_assets/js/settings.js"></script>
    <script src="~/admin_assets/js/todolist.js"></script>
    <!-- endinject -->
</body>
</html>